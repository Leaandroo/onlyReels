{
	"manifest_version": 3,
	"name": "Only Reels",
	"version": "0.1",
	"description": "eliminate sidebar and chats on instagram page",
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_title": "remove elements"
	},
	"content_scripts": [
		{
			"matches": ["*://www.instagram.com/reels/*"],
			"js": ["action.js"],
			"run_at": "document_start"
		}
	]
}
